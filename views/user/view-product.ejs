<script>
  $(".inc").click(()=>{
   let qty= Number($("#itemQty").val())
   qty += 1
   $("#itemQty").val(qty)
  })
  $(".dec").click(()=>{
   let qty= Number($("#itemQty").val())
   qty -= 1
   if(qty < 1){
    qty = 1
   }
   $("#itemQty").val(qty)
  })
</script>